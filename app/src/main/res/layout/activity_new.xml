<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/textNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Сотрудник"/>

    <LinearLayout
        android:id="@+id/cont_user_info"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_below="@id/textNameUser"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/background"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/addEmailUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="22sp"
            tools:text="Почта сотрудника"/>
    </LinearLayout>

    <Button
        android:id="@+id/backNewActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_main"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="30dp"
        android:textSize="16sp"
        android:text="Назад"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/textСhoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cont_user_info"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Выберите объект"/>

    <LinearLayout
        android:id="@+id/cont_shop"

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textСhoice"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:background="@drawable/background_shop">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Товар в магазине"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="100dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/shopButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/blue_main"
                android:text=""/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/ic_shop_btn"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont_stock"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/cont_shop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:background="@drawable/background_shop"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Товар на складе"/>


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="100dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/stockButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/blue_main"
                android:text=""/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/ic_stock_btn"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textMain"
        android:layout_below="@+id/cont_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textStyle="bold
"
        android:text="Важное "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textMain"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        >

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_important"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Перевоз материаолов со склада до магазина занимает от 7 дней"/>

    </LinearLayout>

</RelativeLayout>
